{% extends 'base.html.twig' %}

{% block title %}Transfert index{% endblock %}

{% block monTitre %}<div class="fst-italic"> Transfert </div>{% endblock %}

{% block body %}

    <table class="table-sm table-responsive col-md-4 offset-4 table-bordered mg border border-5 border-info rounded-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transfert in transferts %}
            <tr>
                <td>{{ transfert.id }}</td>
                <td>{{ transfert.nom }}</td>
                <td>
                    <a href="{{ path('app_transfert_show', {'id': transfert.id}) }}">show</a>
                    <a href="{{ path('app_transfert_edit', {'id': transfert.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center"><a class=" btn btn-warning" href="{{ path('app_transfert_new') }}">Create new</a></div>
{% endblock %}
