{% extends 'base.html.twig' %}

{% block title %}Liste des rapports{% endblock %}

{% block body %}
<section>
    <div class="container " style="margin:auto;">
        <div class="form-group col-lg-12 ">
            <h1 class="text-center " style="color:black; margin:75px 50px; font-size:50px;">Table des rapports de séance du Quantascan</h1>
            
        </div>
    </div>
    
    <div class="text-center" style="margin-top:125px ; margin-bottom:50px; ">
        
        <a href="{{ path('app_quantareport_new') }}" class="btn btn-primary">Nouveau rapport</a>
    </div>
     <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Methode de consultation</th>
                <th>Début de la séance </th>
                <th>Fin de la séance</th>
                <th>Prochain rendez-vous</th>
                <th>Client</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quantareport in quantareports %}
            <tr>
                <td>{{ quantareport.id }}</td>
                <td>{{ quantareport.consultMethod }}</td>
                <td>{{ quantareport.startedAt ? quantareport.startedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quantareport.endedAt ? quantareport.endedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quantareport.rdate ? quantareport.rdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ quantareport.client.name   }} {{ quantareport.client.surname}}</td>
               
                <td>
                    <a href="{{ path('app_quantareport_show', {'id': quantareport.id}) }}" class="btn btn-primary">Afficher</a>
                    <a href="{{ path('app_quantareport_edit', {'id': quantareport.id}) }}" class="btn btn-info">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</section>
    

   
{% endblock %}
