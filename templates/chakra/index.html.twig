{% extends 'base.html.twig' %}

{% block title %}Chakra index{% endblock %}


{% block monTitre %}<div class="fst-italic"> Chakras </div>{% endblock %}
{% block body %}
    <table class="table-sm table-responsive col-md-4 offset-4 table-bordered mg border border-5 border-info rounded-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chakra in chakras %}
            <tr>
                <td>{{ chakra.id }}</td>
                <td>{{ chakra.nom }}</td>
                <td>
                    <a href="{{ path('app_chakra_show', {'id': chakra.id}) }}">show</a>
                    <a href="{{ path('app_chakra_edit', {'id': chakra.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center"><a class=" btn btn-warning" href="{{ path('app_chakra_new') }}">Ajouter Chakra</a></div>
{% endblock %}
