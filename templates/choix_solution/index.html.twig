{% extends 'base.html.twig' %}

{% block title %} Choix Solution{% endblock %}


{% block monTitre %}<div class="fst-italic"> Choix Solution </div>{% endblock %}

{% block body %}
    <table class="table-sm table-responsive col-md-4 offset-4 table-bordered mg border border-5 border-info rounded-5">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for choix_solution in choix_solutions %}
            <tr>
                <td>{{ choix_solution.id }}</td>
                <td>{{ choix_solution.nom }}</td>
                <td>
                    <a href="{{ path('app_choix_solution_show', {'id': choix_solution.id}) }}">show</a>
                    <a href="{{ path('app_choix_solution_edit', {'id': choix_solution.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center"><a class=" btn btn-warning" href="{{ path('app_choix_solution_new') }}">Ajouter Choix Solution</a></div>

{% endblock %}
