{% extends 'base.html.twig' %}

{% block title %}ReactionAge index{% endblock %}

{% block monTitre %}<div class="fst-italic"> Reaction Age </div>{% endblock %}

{% block body %}
    <table class="table-sm table-responsive col-md-4 offset-4 table-bordered mg border border-5 border-info rounded-5">>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reaction_age in reaction_ages %}
            <tr>
                <td>{{ reaction_age.id }}</td>
                <td>{{ reaction_age.nom }}</td>
                <td>
                    <a href="{{ path('app_reaction_age_show', {'id': reaction_age.id}) }}">show</a>
                    <a href="{{ path('app_reaction_age_edit', {'id': reaction_age.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center"><a class=" btn btn-warning" href="{{ path('app_reaction_age_new') }}">Create new</a></div>
{% endblock %}
